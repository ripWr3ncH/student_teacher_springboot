					"name": "Get Teacher by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/teachers/{{teacherId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "teachers", "{{teacherId}}"]
						},
						"description": "Retrieve a specific teacher by their ID"
					},
					"response": []
