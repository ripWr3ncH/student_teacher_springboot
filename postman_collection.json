							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Dr. John Smith Updated\",\n    \"email\": \"john.smith.updated@school.edu\",\n    \"department\": \"Computer Science & Engineering\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/teachers/{{teacherId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "teachers", "{{teacherId}}"]
						},
						"description": "Update an existing teacher"
					},
					"response": []
				},
				{
					"name": "Delete Teacher",
					"request": {
						"method": "DELETE",
						"header": [],
