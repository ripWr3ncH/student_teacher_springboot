				{
					"name": "Get All Teachers",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/teachers",
							"host": ["{{baseUrl}}"],
							"path": ["api", "teachers"]
						},
						"description": "Retrieve all teachers from the database"
					},
					"response": []
				},
